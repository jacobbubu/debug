{
  "name": "@jacobbubu/debug",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [],
  "main": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "jacobbubu <rong.shen@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jacobbubu/debug.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame --project tsconfig.json 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "example:ex1": "tsnd --respawn examples/ex1.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm run test:prod && npm run build"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/tools/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/jest": "^24.0.15",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.0.10",
    "@types/rc": "^1.1.0",
    "@types/supports-color": "^5.3.0",
    "colors": "^1.3.3",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "enquirer": "^2.3.0",
    "husky": "^2.7.0",
    "is-scoped": "^2.1.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "lodash.camelcase": "^4.3.0",
    "npm-name": "^5.5.0",
    "prettier": "^1.18.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^4.1.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.24",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.2",
    "validate-commit-msg": "^2.14.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "dependencies": {
    "date-format": "^2.1.0",
    "filesize": "^5.0.2",
    "ms": "^2.1.2",
    "supports-color": "^7.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
